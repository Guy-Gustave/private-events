<h2>sign up</h1>
<%= form_for@user, class: "signupForm" do |f| %>
  <p>
    <%= f.label :name, 'name :'%>
    <%= f.text_field :name %> <br />
  </p>
  <p>
    <%= f.label :email, "Email :" %>
    <%= f.text_field :email %> <br />
  </p>
  <%= f.submit "Create user" %>

<% end %>
