<div class="hero-bg">
  <div class="main d-flex justify-content-center align-items-center flex-column">
    <h2 class="styled-h2">Sign up</h2>
    <div class= "form">
      <%= form_for(@user, class: 'form py-5 pl-5', id: 'test_signup') do |f| %>
        <p>
          <%= f.label :name, 'name :', class: 'm-2'%>
          <%= f.text_field :name %> <br />
        </p>
        <p>
          <%= f.label :email, "Email :", class: 'm-2'%>
          <%= f.text_field :email %> <br />
        </p>
        <div class="d-flex flex-row align-items-center pr-2">
          <%= f.submit "Create user", class: "login-btn btn btn-success mb-1" %>
        </div>
      <% end %>
      <%= link_to 'Home', root_path %>
   </div>
  </div>
</div>